<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="order"
            type="woowacourse.shopping.ui.orders.uistate.OrdersItemUIState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_order_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_order_number"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_number_label"
            app:layout_constraintStart_toEndOf="@id/tv_order_number_label"
            app:layout_constraintTop_toTopOf="@id/tv_order_number_label"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_order_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/label_order_price"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number_label" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_price_label"
            app:layout_constraintStart_toEndOf="@id/tv_order_price_label"
            app:layout_constraintTop_toTopOf="@id/tv_order_price_label"
            tools:text="100,000원" />

        <TextView
            android:id="@+id/tv_order_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/label_order_description"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price_label" />

        <TextView
            android:id="@+id/tv_order_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_order_description_label"
            app:layout_constraintTop_toTopOf="@id/tv_order_description_label"
            tools:text="Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개, Product 1을 3개 주문하셨습니다." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
